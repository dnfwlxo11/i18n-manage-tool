{
  "name": "i18n-management-tool",
  "author": "Daein",
  "private": true,
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env NODE_ENV=development yarn dev --port 4000\" \"wait-on tcp:4000 && cross-env NODE_ENV=development electron .\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "cross-env NODE_ENV=production vue-tsc && cross-env NODE_ENV=production vite build",
    "app:build": "yarn build:for:electron && yarn electron:builder"
  },
  "dependencies": {
    "googleapis": "^129.0.0",
    "nedb-promises": "^6.2.3",
    "sass": "^1.69.5",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "@electron/remote": "^2.1.1",
    "@vitejs/plugin-vue": "^4.5.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.22",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "i18n-management",
    "productName": "i18n Management Tool",
    "copyright": "Copyright Â© 2023 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "directories": {
      "buildResources": "dist",
      "output": "dist_electron"
    },
    "extraResources": [
      "./node_modules/@electron/remote/**"
    ]
  }
}
